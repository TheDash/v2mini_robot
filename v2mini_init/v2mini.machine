<launch>

  <arg name="remote_teleop" default="false"/><!-- is the teleop node running on v2mini? -->
  <arg name="robot_user" default="v2-mini"/><!-- robot's machine username (for testing) -->
  <arg name="remote_user" default="jon"/><!-- remote machine username -->

  <group if="$(arg remote_teleop)">
    <machine name="v2-mini" address="128.189.228.126" user="v2-mini" env-loader="/home/v2-mini/v2mini_ws/devel/env.sh"/>
    <machine name="remote" address="128.189.233.33" user="$(arg remote_user)" default="true"/>
  </group>

  <group unless="$(arg remote_teleop)">
    <machine name="v2-mini" address="127.0.0.1" user="$(arg robot_user)" default="true"/>
  </group>

</launch>
