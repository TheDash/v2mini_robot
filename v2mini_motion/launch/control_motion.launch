<!-- Start V2Mini and a Controller -->

<launch>

  <machine name="this_machine" address="$(env ROS_IP)" user="$(env USER)" timeout="15.0"/><!-- TODO setup var in .bashrc?? -->
  <!-- set true if being launched from remote -->

  <arg name="remote_machine" default="false"/><!-- set true if being launched from remote -->
  <arg name="v2mini_ip" default="localhost"/><!-- provide v2-mini's IP if being launched from remote -->
  <arg name="control" default="remote"/> <!-- 'autonomous' or 'remote' -->
  <arg name="controller" default="keyboard"/> <!-- 'gamepad' or 'keyboard' -->
  <arg name="use_mega" default="true"/><!-- launch base MCU node -->
  <arg name="use_uno" default="true"/><!-- launch torso/head MCU node -->

  <!-- Launch the controller node -->
  <node name="controller" machine="this_machine" pkg="v2mini_motion" type="motion_control" respawn="false" >
      <param name="control" value="$(arg control)" />
      <param name="controller" value="$(arg controller)" />
  </node>

  <!-- Launch the MCU nodes remotely -->
  <include file="$(find v2mini_init)/launch/devices.launch">
    <arg name="remote_machine" value="$(arg remote_machine)"/>
    <arg name="v2mini_ip" value="$(arg v2mini_ip)"/>
    <arg name="use_mega" value="$(arg use_mega)"/>
    <arg name="use_uno" value="$(arg use_uno)"/>
  </include>

</launch>

<!--

example:

roslaunch v2mini_motion motion_direct.launch use_mega:=false use_uno:=true controller:=gamepad

-->
